---
import type { ProfileCardProps } from "./profile-card";
import { ProfileCard as ProfileCardReact } from "./profile-card";

interface Props extends Omit<ProfileCardProps, "imageElement"> {
	image?: string;
	imageAlt?: string;
}

const { image = "chattino.jpeg", imageAlt, ...props } = Astro.props;
const imageSrc = `/images/profiles/${image}`;
---

<ProfileCardReact client:load {...props}>
	<img
		slot="imageElement"
		src={imageSrc}
		alt={imageAlt || props.name}
		width={120}
		height={120}
		class="pixel-art rounded-lg w-full h-full object-cover"
		loading="lazy"
	>
</ProfileCardReact>
