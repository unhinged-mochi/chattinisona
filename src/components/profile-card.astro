---
import type { ProfileCardProps } from "./profile-card";
import { ProfileCard as ProfileCardReact } from "./profile-card";

interface Props extends Omit<ProfileCardProps, "imageElement" | "level"> {
	image?: string;
	imageAlt?: string;
	stats?: {
		level?: number;
		type?: string;
	};
}

const { image = "chattino.jpeg", imageAlt, stats, ...props } = Astro.props;
const imageSrc = `/images/profiles/${image}`;
---

<ProfileCardReact client:load {...props} level={stats?.level}>
	<img
		slot="imageElement"
		src={imageSrc}
		alt={imageAlt || props.name}
		width={120}
		height={120}
		class="pixel-art rounded-lg w-full h-full object-cover"
		loading="lazy"
	>
</ProfileCardReact>
