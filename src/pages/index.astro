---
import { Button } from "@/components/ui/8bit/button";
import "../styles/global.css";
---

<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg">
		<meta name="generator" content={Astro.generator}>
		<title>Chattinisona - Meet the Chattini</title>
	</head>

	<body class="bg-gradient-to-br from-primary/10 via-background to-accent/10">
		<div class="grid place-items-center h-screen content-center px-4">
			<div class="text-center max-w-2xl">
				<h1 class="retro text-4xl md:text-5xl mb-8 text-primary">
					Chattinisona
				</h1>
				<p class="text-xl mb-12 text-muted-foreground">
					Welcome to the Chattini fan community showcase!
				</p>
				<a href="/profiles">
					<Button size="lg" class="retro text-sm">Meet the Chattini</Button>
				</a>
			</div>
		</div>
	</body>
</html>
